[flake8]
# Align with Black's default line length
max-line-length = 88
# Exclude common directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    frontend,
    alembic/versions
# Select error codes
select = E,F,W,C90
# Ignore specific errors that conflict with Black
ignore = E203,E266,E501,W503,W293
# McCabe complexity
max-complexity = 10

# Test-specific relaxations
per-file-ignores =
    tests/*: F401
